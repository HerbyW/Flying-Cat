<!-- Red lamp
3D instrument for Tu-154 -->
<PropertyList>
 <path>red_lamp.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>_c_1</object-name>
  <object-name>_c_2</object-name>
  <object-name>_d_1</object-name>
  <emission> 
    <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.235 </red>
      <green> 0.235 </green>
      <blue>  0.235 </blue>
    </emission>
</animation>
<!--Brightness-->
<animation>
  <type>material</type>
  <object-name>_d_2</object-name>
  <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
</animation>

<!--Set-->
<animation>
  <type>select</type>
  <object-name>_d_2</object-name>
  <condition>
    <and>
      <equals>
	<property>fdm/jsbsim/buoyant_forces/gas-cell/contents-mol</property>
	<value>0</value>
      </equals>
      <greater-than>
	<property>fdm/jsbsim/atmosphere/initT</property>
	<value>0.5</value>
      </greater-than>
    </and>
  </condition>
</animation>

<animation>
<type>scale</type>
<object-name>_c_1</object-name>
  <object-name>_c_2</object-name>
  <object-name>_d_2</object-name>
  <object-name>_d_1</object-name>
<property>sim/signals/fdm-initialized</property>
<x-min>0.50</x-min>
<y-min>0.50</y-min>
<z-min>0.50</z-min>
<x-factor>0.50</x-factor>
<y-factor>0.50</y-factor>
<z-factor>0.50</z-factor>
</animation>

</PropertyList>
