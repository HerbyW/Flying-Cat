<PropertyList>
 <path>vol2.ac</path>

 
 
  <!--Lights-->
                                   
 <animation>   
   <object-name>group</object-name>
   <object-name>rect1</object-name>
</animation>

<effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>group</object-name>
  </effect>
  
  <animation>
    <object-name>group</object-name>
</animation>

  <animation>
    <type>material</type>
    <object-name>group</object-name>
   <object-name>rect1</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
 
 <animation>
  <type>rotate</type>
  <object-name>rect1</object-name>    
        <property>fdm/jsbsim/buoyant_forces/gas-cell/volume-ft3</property>
  <interpolation>
   <entry><ind>  0.0</ind><dep>/0</dep></entry> 
   <entry><ind> 126827.68</ind><dep>  310</dep></entry>
   <entry><ind> 128000</ind><dep>  340</dep></entry>
  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 
 
 <animation>
  <type>scale</type>  
  <property>sim/signals/fdm-initialized</property>
  <offset>1</offset>
  <x-max>0.65</x-max>
  <y-max>0.65</y-max>
  <z-max>0.65</z-max>
  <x-factor>1.0</x-factor>
  <y-factor>1.0</y-factor>
  <z-factor>1.0</z-factor>
 </animation>
 
</PropertyList>

