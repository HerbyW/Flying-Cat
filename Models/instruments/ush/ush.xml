<!-- Heading indicator USH
3D instrument for Tu-154 -->
<PropertyList>
 <path>ush2.ac</path>

 <!-- Internal instruments lighting -->

 <animation>  
  <object-name>index</object-name>
  <object-name>base</object-name>
  <object-name>compass</object-name>
  <object-name>needle_1</object-name>
  <object-name>needle_2</object-name>  
</animation>

<effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>compass</object-name>
  </effect>
  
  <animation>
    <object-name>compass</object-name>
</animation>
 
 <animation>
  <type>material</type>
  <object-name>index</object-name>
  <object-name>base</object-name>
  <object-name>compass</object-name>
  <object-name>needle_1</object-name>
  <object-name>needle_2</object-name>
  
  <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
</animation>

<animation>
  <type>rotate</type>
  <object-name>compass</object-name>
   <property>sim/signals/fdm-initialized</property>   
   <factor> 180 </factor>  
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>  
</animation>

<animation>
  <type>pick</type>
  <object-name>compass</object-name>
  <visible>true</visible>   
    
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>Drift</tooltip-id>
      <label>Orientation Drift: %5.2f</label>
      <property>/instrumentation/drift</property>      
    </binding>
  </hovered> 
  
</animation>


