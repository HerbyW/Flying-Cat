<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
  
  <path>signal.ac</path>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>signal</object-name>
  </effect>
  
  <animation>
    <object-name>signal</object-name>
</animation>
  
  <animation>
    <type>select</type>	  
    <condition>
      <greater-than>
        <property>sim/multiplay/generic/float[4]</property>
        <value>0</value>
      </greater-than>
    </condition>
  </animation>
  
  <animation>
    <type>scale</type>
    <property>sim/multiplay/generic/float[4]</property>
    <offset>0</offset>
    <x-max>150</x-max>
    <y-max>150</y-max>
    <z-max>150</z-max>
    <x-factor>1</x-factor>
    <y-factor>1</y-factor>
    <z-factor>1</z-factor>
  </animation>
  
  </PropertyList>